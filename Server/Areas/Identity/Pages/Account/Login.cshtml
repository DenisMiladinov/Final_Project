@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Identity/Account.css" asp-append-version="true" />
}

<section class="auth-page">
    <div class="auth-page__container">
        <h1 class="auth-page__title">@ViewData["Title"]</h1>

        <form id="loginForm" method="post" class="auth-page__form">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger auth-page__errors"
                 role="alert"></div>

            <label class="auth-field">
                 <span class="auth-field__label">Username</span>
                 <input asp-for="Input.Username"
                        class="auth-field__input"
                        placeholder="Username"
                        autocomplete="username" />
                 <span asp-validation-for="Input.Username"
                       class="text-danger auth-field__error"></span>
             </label>

            <label class="auth-field">
                <span class="auth-field__label">Password</span>
                <input asp-for="Input.Password"
                       type="password"
                       class="auth-field__input"
                       placeholder="••••••••"
                       autocomplete="current-password" />
                <span asp-validation-for="Input.Password"
                      class="text-danger auth-field__error"></span>
            </label>

            <div class="mb-3 remember-me">
                <label class="remember-me__label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                    <input asp-for="Input.RememberMe" class="remember-me__checkbox" />
                </label>
            </div>

            <button id="loginSubmit"
                    type="submit"
                    class="btn auth-page__btn">
                Log in
            </button>

            <div class="auth-page__links">
                <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Register as a new user
                    </a>
                </p>
                <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
