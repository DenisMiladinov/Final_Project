@page
@model RegisterModel
@{
    ViewData["Title"] = "Create account";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Identity/Account.css" asp-append-version="true" />
}

<section class="auth-page">
    <div class="auth-page__container">
        <h1 class="auth-page__title">@ViewData["Title"]</h1>

        <form id="registerForm"
              asp-route-returnUrl="@Model.ReturnUrl"
              method="post"
              class="auth-page__form">

            <div asp-validation-summary="ModelOnly"
                 class="text-danger auth-page__errors"
                 role="alert"></div>

            <label class="auth-field">
                <span class="auth-field__label">Username</span>
                <input asp-for="Input.Username"
                       class="auth-field__input"
                       placeholder="Username"
                       autocomplete="username" />
                <span asp-validation-for="Input.Username"
                      class="text-danger auth-field__error"></span>
            </label>

            <label class="auth-field">
                <span class="auth-field__label">Email</span>
                <input asp-for="Input.Email"
                       class="auth-field__input"
                       placeholder="name@example.com"
                       autocomplete="username" />
                <span asp-validation-for="Input.Email"
                      class="text-danger auth-field__error"></span>
            </label>

            <label class="auth-field">
                <span class="auth-field__label">Password</span>
                <input asp-for="Input.Password"
                       class="auth-field__input"
                       placeholder="••••••••"
                       type="password"
                       autocomplete="new-password" />
                <span asp-validation-for="Input.Password"
                      class="text-danger auth-field__error"></span>
            </label>

            <label class="auth-field">
                <span class="auth-field__label">Confirm password</span>
                <input asp-for="Input.ConfirmPassword"
                       class="auth-field__input"
                       placeholder="••••••••"
                       type="password"
                       autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword"
                      class="text-danger auth-field__error"></span>
            </label>

            <button id="registerSubmit"
                    type="submit"
                    class="btn auth-page__btn">
                Register
            </button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
