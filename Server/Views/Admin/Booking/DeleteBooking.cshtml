@model Models.Booking
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cancel Booking";
}

<h1>Cancel Booking #@Model.BookingId?</h1>
<dl class="row">
    <dt class="col-sm-2">Spot</dt>
    <dd class="col-sm-10">@Model.VacationSpot?.Title</dd>
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>
    <dt class="col-sm-2">Dates</dt>
    <dd class="col-sm-10">@Model.StartDate → @Model.EndDate</dd>
    <dt class="col-sm-2">Total Price</dt>
    <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
</dl>
<form asp-action="DeleteBooking" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Confirm Cancel</button>
    <a asp-action="Bookings" class="btn btn-secondary ms-2">Back</a>
</form>
