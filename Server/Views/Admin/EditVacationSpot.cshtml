@model Models.VacationSpot

<section class="section__container">
    <div class="section__header">
        <h2 class="section__title">Edit Vacation Spot</h2>
    </div>

    <form asp-action="EditVacationSpot" method="post" class="form">
        <input type="hidden" asp-for="SpotId" />

        <div class="form__group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form__input" />
            <span asp-validation-for="Title" class="form__error"></span>
        </div>

        <div class="form__group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form__input" />
            <span asp-validation-for="Location" class="form__error"></span>
        </div>

        <div class="form__group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form__input"></textarea>
            <span asp-validation-for="Description" class="form__error"></span>
        </div>

        <div class="form__group">
            <label asp-for="PricePerNight"></label>
            <input asp-for="PricePerNight" class="form__input" type="number" step="0.01" />
            <span asp-validation-for="PricePerNight" class="form__error"></span>
        </div>

        <div class="form__actions">
            <button type="submit" class="btn">Save Changes</button>
            <a asp-action="ManageVacationSpots" class="btn btn--outline">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
