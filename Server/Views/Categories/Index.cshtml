@model IEnumerable<Models.Category>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Categories";
}

<section class="py-5">
    <div class="container">
        <h2 class="display-5 mb-2">@ViewData["Title"]</h2>
        <p class="text-muted mb-4">All categories—edit, delete, or add new ones.</p>
        <a asp-action="Create" class="btn btn-success mb-4">+ New Category</a>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.CategoryId</td>
                            <td>@c.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-sm btn-primary me-1">Edit</a>
                                <form asp-action="Delete" asp-route-id="@c.CategoryId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete category “@c.Name”?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
