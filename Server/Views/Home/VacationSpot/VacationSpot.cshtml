@model Models.VacationSpot

<section class="section__container vacation-details">
    <div class="section__header">
        <h2 class="section__title">@Model.Title</h2>
        <p class="section__subtitle">@Model.Location</p>
    </div>

    <div class="vacation-details__wrapper">
        <div class="vacation-details__image">
            <img src="@Model.Images?.FirstOrDefault()?.ImageUrl" alt="@Model.Title" />
        </div>

        <div class="vacation-details__info">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price per night:</strong> @Model.PricePerNight BGN</p>

            <div class="vacation-details__actions">
                <a asp-controller="Booking" asp-action="Create" asp-route-spotId="@Model.SpotId" class="btn">Book Now</a>
                <a asp-controller="VacationSpot" asp-action="Index" class="btn btn--outline">Back to All Spots</a>
            </div>
        </div>
    </div>
</section>
