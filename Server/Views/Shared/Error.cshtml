@model Models.ViewModels.ErrorViewModel

<section class="section__container">
    <div class="section__header">
        <h2 class="section__title">Something went wrong</h2>
        <p class="section__subtitle">An unexpected error has occurred.</p>
    </div>

    <div class="error__content">
        <p>We apologize for the inconvenience. Please try again later or contact support if the issue persists.</p>

        @if (Model?.ShowRequestId == true)
        {
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        <div class="section__actions">
            <a asp-controller="Home" asp-action="Index" class="btn">Return Home</a>
        </div>
    </div>
</section>
