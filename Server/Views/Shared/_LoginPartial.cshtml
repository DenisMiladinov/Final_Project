@using Microsoft.AspNetCore.Identity
@inject SignInManager<Models.ApplicationUser> SignInManager
@inject UserManager<Models.ApplicationUser> UserManager

<div class="login-partial d-flex align-items-center gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link">
            @UserManager.GetUserName(User)
        </a>
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline m-0 p-0">
            <button type="submit" class="btn btn-link nav-link p-0">Log out</button>
        </form>
    }
    else
    {
        <a class="nav-link p-0" asp-area="Identity" asp-page="/Account/Login">Log in</a>
        <a class="nav-link p-0" asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</div>
